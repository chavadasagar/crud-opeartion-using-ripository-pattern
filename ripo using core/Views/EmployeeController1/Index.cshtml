@model IEnumerable<ripo_using_core.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1 class="p-3 bg-info rounded">Add User</h1>


<p class="mt-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table" id="table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id } ,htmlAttributes:new {@class="btn btn-outline-primary"}) 
                @Html.ActionLink("Details", "Details", new {  id=item.Id},htmlAttributes:new {@class="btn btn-outline-info"} ) 
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  },htmlAttributes:new {@class="btn btn-outline-danger",@id="delete"})
            </td>
        </tr>
}
    </tbody>
</table>

<div id="data">

</div>

